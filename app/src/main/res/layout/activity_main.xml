<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/zen_primary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_description"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        android:background="@drawable/widget_background">

        <com.yourapp.zenstonegarden.InteractiveZenView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/widget_description" />

    </FrameLayout>

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/refresh_preview"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/zen_secondary"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/add_widget_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_widget"
        android:textSize="16sp"
        android:backgroundTint="@color/zen_secondary_variant"
        android:textColor="@color/white" />

</LinearLayout>
